<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.roofcare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup,UnusedAttribute">
        <activity
            android:name=".activities.savedOffers.SavedOfferActivity"
            android:parentActivityName=".activities.dashboard.Dashboard" />
        <activity
            android:name=".activities.reviews.UserReviews"
            android:parentActivityName=".activities.userProfile.UserProfile" />
        <activity
            android:name=".activities.userOffer.UserOffers"
            android:parentActivityName=".activities.userProfile.UserProfile" />
        <activity
            android:name=".activities.userProfile.UserProfile"
            android:parentActivityName=".activities.dashboard.Dashboard">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".activities.search.SearchActivity"
            android:parentActivityName=".activities.dashboard.Dashboard"
            android:windowSoftInputMode="stateAlwaysVisible" />
        <activity
            android:name=".activities.dashboard.Dashboard"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.register.Register"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.logIn.LogIn"
            android:parentActivityName=".activities.register.Register" />
        <activity android:name=".activities.splashScreen.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>